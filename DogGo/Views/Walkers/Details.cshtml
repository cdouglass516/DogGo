@model DogGo.Models.ViewModels.WalkerWalksViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Walker</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Walker.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Neighborhood.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Walker.Neighborhood.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img class="bg-info" style="height:100px" src="@Model.Walker.ImageUrl" alt="avatar" />
        </dd>
    </dl>
    <div>
        <h4>Walks</h4>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Date
                    </th>
                    <th>
                        Duration
                    </th>
                    <th>
                        Dog
                    </th>
                    <th>
                        Owner
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Walks)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DisplayDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DisplayDuration)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DogName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OwnerName)
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
